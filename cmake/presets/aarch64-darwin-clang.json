{
  "version": 6,
  "include": [
    "base.json",
    "os/darwin.json",
    "compilers/clang.json"
  ],
  "configurePresets": [
    {
      "name": "aarch64-darwin-clang-static",
      "inherits": [
        "base",
        "aarch64-darwin",
        "clang"
      ],
      "displayName": "aarch64 darwin clang static libs"
    },
    {
      "name": "aarch64-darwin-clang-dynamic",
      "inherits": "aarch64-darwin-clang-static",
      "displayName": "aarch64 darwin clang dynamic libs",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      }
    },
    {
      "name": "aarch64-darwin-clang",
      "inherits": "aarch64-darwin-clang-dynamic",
      "displayName": "alias to aarch64-darwin-clang-dynamic"
    }
  ],
  "buildPresets": [
    {
      "name": "aarch64-darwin-clang-static",
      "inherits": "base",
      "configurePreset": "aarch64-darwin-clang-static"
    },
    {
      "name": "aarch64-darwin-clang-dynamic",
      "inherits": "base",
      "configurePreset": "aarch64-darwin-clang-dynamic"
    },
    {
      "name": "aarch64-darwin-clang",
      "inherits": "aarch64-darwin-clang-dynamic",
      "configurePreset": "aarch64-darwin-clang"
    }
  ],
  "testPresets": [
    {
      "name": "aarch64-darwin-clang-static",
      "inherits": "base",
      "configurePreset": "aarch64-darwin-clang-static"
    },
    {
      "name": "aarch64-darwin-clang-dynamic",
      "inherits": "base",
      "configurePreset": "aarch64-darwin-clang-dynamic"
    },
    {
      "name": "aarch64-darwin-clang",
      "inherits": "aarch64-darwin-clang-dynamic",
      "configurePreset": "aarch64-darwin-clang"
    }
  ],
  "workflowPresets": [
    {
      "name": "aarch64-darwin-clang-static",
      "steps": [
        {
          "type": "configure",
          "name": "aarch64-darwin-clang-static"
        },
        {
          "type": "build",
          "name": "aarch64-darwin-clang-static"
        },
        {
          "type": "test",
          "name": "aarch64-darwin-clang-static"
        }
      ]
    },
    {
      "name": "aarch64-darwin-clang-dynamic",
      "steps": [
        {
          "type": "configure",
          "name": "aarch64-darwin-clang-dynamic"
        },
        {
          "type": "build",
          "name": "aarch64-darwin-clang-dynamic"
        },
        {
          "type": "test",
          "name": "aarch64-darwin-clang-dynamic"
        }
      ]
    },
    {
      "name": "aarch64-darwin-clang",
      "steps": [
        {
          "type": "configure",
          "name": "aarch64-darwin-clang"
        },
        {
          "type": "build",
          "name": "aarch64-darwin-clang"
        },
        {
          "type": "test",
          "name": "aarch64-darwin-clang"
        }
      ]
    }
  ]
}
